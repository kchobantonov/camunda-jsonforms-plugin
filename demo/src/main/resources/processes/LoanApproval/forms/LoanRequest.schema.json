{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 3,
      "description": "Please enter your first name",
      "i18n": "firstName"
    },
    "lastName": {
      "type": "string",
      "minLength": 3,
      "description": "Please enter your last name",
      "i18n": "lastName"
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "description": "Please enter your birth date.",
      "i18n": "birthDate"
    },
    "nationality": {
      "type": "string",
      "enum": ["DE", "IT", "JP", "US", "RU", "Other"],
      "i18n": "nationality"
    },
    "provideAddress": {
      "type": "boolean",
      "i18n": "provideAddress"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string",
          "i18n": "address.street"
        },
        "streetNumber": {
          "type": "string",
          "i18n": "address.streetNumber"
        },
        "city": {
          "type": "string",
          "i18n": "address.city"
        },
        "postalCode": {
          "type": "string",
          "maxLength": 5,
          "i18n": "address.postalCode"
        },
        "additionalProperties": false
      }
    },
    "amount": {
      "type": "number",
      "minimum": 0,
      "i18n": "amount"
    }
  },
  "required": ["amount", "firstName", "lastName"],
  "additionalProperties": false
}
