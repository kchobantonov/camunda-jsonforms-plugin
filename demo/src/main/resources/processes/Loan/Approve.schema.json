{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "loanRequest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "readOnly": true,
          "i18n": "loanRequest.name"
        },
        "amount": {
          "type": "number",
          "readOnly": true,
          "i18n": "loanRequest.amount"
        },
        "currency": {
          "type": "string",
          "enum": ["USD", "EUR"],
          "readOnly": true,
          "i18n": "loanRequest.currency"
        }
      },
      "additionalProperties": false,
      "readOnly": true
    }
  },
  "patternProperties": {
    "approved": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
