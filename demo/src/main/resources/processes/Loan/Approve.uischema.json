{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "TemplateLayout",
          "template": "<img :src=\"data.loanRequest.picture\" height=\"100\" width=\"100\"/>"
        },
        {
          "type": "Control",
          "scope": "#/properties/loanRequest/properties/name"
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/loanRequest/properties/amount"
    },
    {
      "type": "Control",
      "scope": "#/properties/loanRequest/properties/currency"
    },
    {
      "type": "Label",
      "text": "Additional Information"
    },
    {
      "type": "Label",
      "text": "The template for accessing your name is {{ data.loanRequest.name }}"
    },
    {
      "type": "Label",
      "text": "Your name at loading is {{ data.loanRequest?.name }}",
      "options": {
        "template": true
      }
    },
    {
      "type": "Label",
      "text": "Your name is <span style=\"color: red\">{{ data.loanRequest?.name }}</span>",
      "options": {
        "template": true,
        "dynamic": true
      }
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Label",
          "text": "Display the name on right side only if the name is John"
        },
        {
          "type": "Label",
          "text": "<span v-if=\"data.loanRequest?.name == 'John'\">{{ data.loanRequest?.name }}</span>",
          "options": {
            "template": true,
            "dynamic": true
          }
        }
      ]
    },
    {
      "type": "Label",
      "text": "JSON Forms Data & Errors:"
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Label",
          "text": "Data: {{ data ? JSON.stringify( data ) : '' }}",
          "options": {
            "template": true,
            "dynamic": true
          }
        },
        {
          "type": "Label",
          "text": "Errors: {{ errors ? JSON.stringify( errors ) : '' }}",
          "options": {
            "template": true,
            "dynamic": true
          }
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Button",
          "text": "Approve",
          "color": "primary",
          "action": "submit",
          "options": {
            "i18n": "button.approve"
          },
          "variables": {
            "approved": {
              "type": "boolean",
              "value": true
            }
          },
          "rule": {
            "effect": "ENABLE",
            "condition": {
              "scope": "#/",
              "schema": { "$ref": "/#" }
            }
          }
        },
        {
          "type": "Button",
          "text": "Decline",
          "color": "purple",
          "action": "submit-without-data",
          "options": {
            "i18n": "button.decline"
          },
          "variables": {
            "approved": {
              "type": "boolean",
              "value": false
            }
          }
        },
        {
          "type": "Button",
          "text": "Can't Decide Error",
          "color": "red",
          "action": "error",
          "errorCode": "myError",
          "errorMessage": "my error message"
        },
        {
          "type": "Button",
          "text": "Escalation",
          "color": "greem",
          "action": "escalation",
          "escalationCode": "myescalation"
        }
      ]
    }
  ]
}
