{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/invoiceDocument"
    },
    {
      "type": "Control",
      "scope": "#/properties/creditor"
    },
    {
      "type": "Control",
      "scope": "#/properties/amount"
    },
    {
      "type": "Control",
      "scope": "#/properties/invoiceCategory",
      "options": {
        "vuetify": {
          "v-autocomplete": {
            "prepend-icon": "mdi-shape",
            "attach": true
          }
        }
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/invoiceNumber"
    },
    {
      "type": "Button",
      "text": "Start",
      "color": "primary",
      "rule": {
        "effect": "ENABLE",
        "condition": {
          "scope": "#/",
          "schema": { "$ref": "/#" }
        }
      }
    }
  ]
}
