{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "TemplateLayout",
      "template": "<p>Please prepare the bank transfer for the following invoice</p>"
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Label",
          "text": "Invoice Document"
        },
        {
          "type": "TemplateLayout",
          "template": "<div><a v-if=\"context.variables?.invoiceDocument?.type === 'File'\" :href=\"context.config.url + '/task/' + context.config.taskId + '/variables/invoiceDocument/data'\">{{ context?.variables?.invoiceDocument?.valueInfo?.filename }}</a><span v-else> No invoice provided </span></div> "
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/creditor"
    },
    {
      "type": "Control",
      "scope": "#/properties/amount"
    },
    {
      "type": "Control",
      "scope": "#/properties/invoiceCategory"
    },
    {
      "type": "Control",
      "scope": "#/properties/invoiceNumber"
    },
    {
      "type": "Control",
      "scope": "#/properties/approver"
    },
    {
      "type": "CamundaButton",
      "text": "Submit",
      "color": "primary",
      "rule": {
        "effect": "ENABLE",
        "condition": {
          "scope": "#/",
          "schema": { "$ref": "/#" }
        }
      }
    }
  ]
}
