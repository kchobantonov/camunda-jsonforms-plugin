{
  "name": "@chobantonov/camunda-jsonforms-plugin",
  "engines": {
    "node": "^18.19.0",
    "pnpm": ">=7.13.4"
  },
  "scripts": {
    "clean": "pnpm -r clean",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "camunda:build": "pnpm --filter @chobantonov/camunda-jsonforms build",
    "camunda:watch": "pnpm --filter @chobantonov/camunda-jsonforms watch",
    "camunda:test": "pnpm --filter @chobantonov/camunda-jsonforms test",
    "camunda-wc:build": "pnpm --filter @chobantonov/camunda-jsonforms-webcomponent build",
    "camunda-wc:dev": "pnpm --filter @chobantonov/camunda-jsonforms-webcomponent dev",
    "camunda-wc:test": "pnpm --filter @chobantonov/camunda-jsonforms-webcomponent test"
  },
  "pnpm": {
    "overrides": {
      "ajv-formats": "^3.0.1"
    }
  },
  "devDependencies": {
    "rimraf": "^5.0.10",
    "typescript": "~5.4.0"
  }
}
